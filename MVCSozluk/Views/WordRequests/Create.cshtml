@using Entity
@model WordRequest

<style>
    .container {
        width: 500px;
        margin: auto;
        margin-top: 200px;
    }
</style>

<div class="container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form", @role = "form", @id = "login-nav" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger form-group">
                @Html.ValidationSummary()
            </div>
        }
        <div class="form-group">
            @Html.LabelFor(x => x.Word, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Word, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Word)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Language, new { @class = "control-label" })
            @Html.DropDownListFor(x => x.LanguageId, (IEnumerable<SelectListItem>)ViewBag.Langs, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Gönder</button>
        @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-warning" })
    }
</div>
